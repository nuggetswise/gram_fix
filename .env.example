# GhostWrite Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# LLM API Keys
# ============================================

# Gemini API Key (Primary AI Provider)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (Fallback AI Provider)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Database Configuration (Supabase)
# ============================================

# Supabase Project URL
# Format: https://your-project-id.supabase.co
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Service Role Key (Server-side only, keep secret!)
# Found in: Supabase Dashboard > Project Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Supabase Anon Key (Public, used by client if needed)
# Found in: Supabase Dashboard > Project Settings > API > anon public key
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# Payment Configuration (Stripe)
# ============================================

# Stripe Secret Key
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Webhook Secret (for handling payment events)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# Application Configuration
# ============================================

# API Base URL (where your Vercel functions are deployed)
# Development: http://localhost:3000
# Production: https://your-app.vercel.app
API_BASE_URL=http://localhost:3000

# Environment (development, staging, production)
NODE_ENV=development

# ============================================
# Optional: Advanced Configuration
# ============================================

# Enable debug logging (true/false)
DEBUG_MODE=false

# Rate limiting (requests per minute per user)
RATE_LIMIT_RPM=60

# Maximum text length for AI processing (characters)
MAX_TEXT_LENGTH=10000
